<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="10dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ic_home_black_24dp"
            android:drawablePadding="5dp"
            android:drawableTint="@color/primary"
            android:text="@string/preferences"
            android:textColor="@color/primary_text"
            android:textSize="17sp"
            android:textStyle="normal|bold" />

    // Fiador
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sponsor"
            android:textColor="@color/secondary_text"
            android:textSize="15sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switchSponsor"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textAlignment="textEnd" />
    </LinearLayout>

    //Condominio
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/condominium"
            android:textColor="@color/secondary_text"
            android:textSize="15sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switchCondominium"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textAlignment="textEnd" />
    </LinearLayout>

    //Animais
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pet"
            android:textColor="@color/secondary_text"
            android:textSize="15sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switchPet"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textAlignment="textEnd" />

    </LinearLayout>

    //Criancas
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/child"
            android:textColor="@color/secondary_text"
            android:textSize="15sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switchChild"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textAlignment="textEnd" />

    </LinearLayout>

    //Lavanderia
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/laundry"
            android:textColor="@color/secondary_text"
            android:textSize="15sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/laundry"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textAlignment="textEnd" />
    </LinearLayout>

    //Garagem
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vacancy"
            android:textColor="@color/secondary_text"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner_vacancy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:entries="@array/numbers"
            android:prompt="@string/vacancy"/>
    </LinearLayout>

    // Quartos
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:weightSum="1"
        android:textAlignment="textEnd">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/room"
            android:textColor="@color/secondary_text"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner_rooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/numbers"
            android:textAlignment="textEnd"
            android:prompt="@string/room"/>
    </LinearLayout>

    //Banheiro
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bathroom"
            android:textColor="@color/secondary_text"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner_bathroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/numbers"
            android:textAlignment="textEnd"
            android:prompt="@string/bathroom"/>
    </LinearLayout>

</LinearLayout>

</android.support.v7.widget.CardView>